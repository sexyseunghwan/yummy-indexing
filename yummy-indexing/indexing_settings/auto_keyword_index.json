{
    "settings": {
        "index": {
            "number_of_shards": 3,
            "number_of_replicas": 1,
            "max_result_window": 500000,
            "max_ngram_diff": "50",
            "max_shingle_diff": "50"
        },
        "analysis": {
            "analyzer": {
                "token_search_analyzer": {
                    "tokenizer": "whitespace",
                    "filter": [
                        "lowercase",
                        "trim"
                    ]
                },
                "ngram_analyzer": {
                    "type": "custom",
                    "tokenizer" : "keyword",
                    "filter": [
                        "lowercase",
                        "trim",
                        "edge_ngram_filter_front"
                    ]
                },
                "autocomplate_search_analyzer": {
                    "type" : "custom",
                    "tokenizer" : "keyword",
                    "filter" : [
                        "lowercase",
                        "trim"
                    ]
                },
                "chosung_index_analyzer": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": [
                        "lowercase",
                        "trim",
                        "edge_ngram_filter_chosung"
                    ]
                },
                "chosung_search_analyzer": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": [
                        "lowercase",
                        "trim"
                    ]
                },
                "edge_ngram_analyzer": {
                    "type": "custom",
                    "tokenizer": "edge_ngram_tokenizer",
                    "filter": [
                        "lowercase",
                        "trim"
                    ]
                }
            },
            "filter": {
                "edge_ngram_filter_front" : {
                    "type" : "edge_ngram",
                    "min_gram" : "2",
                    "max_gram" : "50",
                    "side" : "front"
                },
                "edge_ngram_filter_chosung" : {
                    "type" : "edge_ngram",
                    "min_gram" : "1",
                    "max_gram" : "50",
                    "side" : "front"
                }
            },
            "tokenizer": {
                "edge_ngram_tokenizer": {
                    "type": "edge_ngram",
                    "token_chars": ["letter", "digit"]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "seq": {
                "type": "integer"
            },
            "name": {
                "type": "text",
                "fields": {
                    "autocomplete": {
                        "type": "text",
                        "analyzer": "edge_ngram_analyzer",
                        "search_analyzer": "token_search_analyzer"
                    },
                    "chosung": {
                        "type": "text",
                        "analyzer": "chosung_index_analyzer",
                        "search_analyzer": "chosung_search_analyzer"
                    }
                }
            }
        }
    }
}