{
    "settings": {
        "index": {
            "number_of_shards": 3,
            "number_of_replicas": 1,
            "max_result_window": 500000,
            "max_ngram_diff": "50",
            "max_shingle_diff": "50"
        },
        "analysis": {
            "analyzer": {
                "token_search_analyzer": {
                    "tokenizer": "whitespace",
                    "filter": [
                        "lowercase",
                        "trim"
                    ]
                },
                "ngram_analyzer": {
                    "type": "custom",
                    "tokenizer" : "keyword",
                    "filter": [
                        "lowercase",
                        "trim",
                        "edge_ngram_filter_front"
                    ]
                },
                "autocomplate_search_analyzer": {
                    "type" : "custom",
                    "tokenizer" : "keyword",
                    "filter" : [
                        "lowercase",
                        "trim"
                    ]
                },
                "chosung_index_analyzer": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": [
                        "lowercase",
                        "trim",
                        "edge_ngram_filter_chosung"
                    ]
                },
                "chosung_search_analyzer": {
                    "type": "custom",
                    "tokenizer": "keyword",
                    "filter": [
                        "lowercase",
                        "trim"
                    ]
                },
                "edge_ngram_analyzer": {
                    "type": "custom",
                    "tokenizer": "edge_ngram_tokenizer",
                    "filter": [
                        "lowercase",
                        "trim"
                    ]
                },
                "korean": {
                    "filter" : [
                        "stop_filtering",
                        "synonym_filtering"
                        ],
                    "type": "custom",
                    "tokenizer": "nori_tokenizer_with_user_dictionary"
                }
            },
            "filter": {
                "edge_ngram_filter_front" : {
                    "type" : "edge_ngram",
                    "min_gram" : "2",
                    "max_gram" : "50",
                    "side" : "front"
                },
                "edge_ngram_filter_chosung" : {
                    "type" : "edge_ngram",
                    "min_gram" : "1",
                    "max_gram" : "50",
                    "side" : "front"
                },
                "synonym_filtering": {
                    "type": "synonym",
                    "lenient": true,
                    "synonyms_path": "config/yummy/synonym.txt"
                },
                "stop_filtering": {
                    "type": "stop",
                    "stopwords_path": "config/yummy/stop_words.txt"
                }
            },
            "tokenizer": {
                "edge_ngram_tokenizer": {
                    "type": "edge_ngram",
                    "token_chars": ["letter", "digit"]
                },
                "nori_tokenizer_with_user_dictionary": {
                    "type": "nori_tokenizer",
                    "decompound_mode": "mixed",
                    "user_dictionary": "config/yummy/user_dic.txt"  
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "name": {
                "type": "text",
                "fields": {
                    "autocomplete": {
                        "type": "text",
                        "analyzer": "edge_ngram_analyzer",
                        "search_analyzer": "edge_ngram_analyzer"
                    },
                    "basic": {
                        "type": "text",
                        "analyzer": "korean",
                        "search_analyzer": "korean"
                    }
                }
            },
            "name_chosung": {
                "type": "text",
                "analyzer": "chosung_index_analyzer",
                "search_analyzer": "chosung_search_analyzer"
            }
        }
    }
}