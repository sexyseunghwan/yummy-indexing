{
  "settings": {
    "index": {
      "analysis": {
        "analyzer": {
          "korean": {
            "filter" : [
                "stop_filtering",
                "synonym_filtering"
              ],
            "type": "custom",
            "tokenizer": "nori_tokenizer_with_user_dictionary"
          },
          "standard_analyzer": {
            "type": "custom",
            "tokenizer": "seperate_tokenizer"
          }
        },
        "filter": {
          "synonym_filtering": {
            "type": "synonym",
            "lenient": true,
            "synonyms_path": "config/yummy/synonym.txt"
          },
          "stop_filtering": {
            "type": "stop",
            "stopwords_path": "config/yummy/stop_words.txt"
          }
        },
        "tokenizer": {
          "nori_tokenizer_with_user_dictionary": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed",
            "user_dictionary": "config/yummy/user_dic.txt"  
          },
          "standard_tokenizer": {
            "type": "standard"
          },
          "seperate_tokenizer": {
            "type": "pattern",
            "pattern": "[,]|[|]"
          }
        }
      }
    }
  },
  "mappings" : {
    "properties" : {
      "@timestamp" : {
        "type" : "date"
      },
      "cur_timestamp" : {
        "type" : "date"
      },
      "prodt_money" : {
        "type" : "long"
      },
      "prodt_name" : {
        "type" : "text",
        "analyzer" : "korean"
      },
      "prodt_type" : {
        "type" : "keyword"
      }
    }
  }
}
